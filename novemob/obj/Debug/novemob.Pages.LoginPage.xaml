<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="novemob.LoginPage" Title="Login de Teste" BackgroundColor="Blue">
	<ContentPage.Content>
		<StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Padding="5">
			<Entry x:Name="txtLogin" WidthRequest="300" HeightRequest="50" Placeholder="Digite o usuário" PlaceholderColor="Gray" BackgroundColor="Silver" TextColor="Purple" />
			<Entry x:Name="txtPassword" IsPassword="true" WidthRequest="300" HeightRequest="50" Placeholder="Digite a senha" PlaceholderColor="Yellow" BackgroundColor="Red" TextColor="White" />

			<StackLayout Orientation="Horizontal" VerticalOptions="End" HorizontalOptions="CenterAndExpand" BackgroundColor="White">
				<Button x:Name="btnLogin" Text="Entrar" BackgroundColor="Green" TextColor="Aqua" WidthRequest="150" 
					Clicked="loginClick" />
				<Button x:Name="btnRecPass" Text="Recuperar Senha" BackgroundColor="Aqua" TextColor="Blue" WidthRequest="150"
					Clicked="recClick" />
			</StackLayout>
			
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
